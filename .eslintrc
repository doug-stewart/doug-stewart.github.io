{
  "extends": [
    "prettier",
    "prettier/react",
    "eslint:recommended",
    "plugin:import/errors"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "eqeqeq": "error",
    "no-console": 1,
    "one-var": ["error", "never"],
    "quotes": [2, "single", "avoid-escape"],
    "require-await": "error"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true,
    "node": true
  }
}
